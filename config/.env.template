# RememBot Configuration
# Copy this file to .env in the project root and fill in your values

# Required: Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: OpenAI API Key (for AI-powered classification and query enhancement)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Database path (defaults to ~/.remembot/remembot.db)
REMEMBOT_DB_PATH=/path/to/your/database.db

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO